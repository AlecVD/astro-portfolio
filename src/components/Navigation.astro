---
const mainLinks: { label: string; href: string; icon: string }[] = [
	{ label: 'home', href: '/',icon: '<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-home" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.75" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l-2 0l9 -9l9 9l-2 0" /><path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" /><path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6" /></svg>' },
	{ label: 'contact', href: '/contact/', icon: '<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.75" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" /><path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" /></svg>' },
	{ label: 'blog', href: '/posts/post-1', icon: '<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-book-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.75" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19 4v16h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12z" /><path d="M19 16h-12a2 2 0 0 0 -2 2" /><path d="M9 8h6" /></svg>' },
];
---

<div class="nav-links">
    {
        mainLinks.map(({ label, href , icon}) => (
            <a
                aria-current={Astro.url.pathname === href}
                class:list={[
                    'link',
                    {
                        active:
                            Astro.url.pathname === href ||
                            (href !== '/' && Astro.url.pathname.startsWith(href)),
                    },
                ]}
                href={href}
                set:html={icon}
            > 
            </a>
        ))
    }
</div>

<style>
    .nav-links{
        display: flex;
        /* width: fit-content; */
        border-style: solid;
        border-color: var(--border-color);
        border-width: 1px;
        border-radius: 1.5em;
        background-color: var(--background-color-alt);
        padding: 0.5em;
    }
    
    .nav-links a{
        padding: 0.5em;
        text-decoration: none;
        color: var(--text-color-alt);
    }
    .nav-links a.active{
        background-color: var(--second-background);
        border-style: solid;
        border-color: var(--border-color);
        border-width: 1px;
        border-radius: 50%;

    }
</style>