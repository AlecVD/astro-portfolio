---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Contact";

const about = {
  firstName: "Alec",
  lastName: "van Dijken",
  phoneNumber: "+1 (123)-456-7543",
};
const skills = ["HTML", "CSS", "JavaScript", "Vue", "Astro", "Rock Climbing"];
const skillColor = "navy";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="card">
    <h2>My name is {about.firstName + " " + about.lastName}</h2>
    <p>Skills:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
  </div>
</BaseLayout>
